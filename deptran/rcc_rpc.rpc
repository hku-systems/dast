namespace rococo;

abstract service MultiPaxos {

  defer Forward(ContainerCommand cmd);

  defer Prepare(uint64_t slot,
                uint64_t ballot |
                uint64_t max_ballot);

  defer Accept(uint64_t slot,
               uint64_t ballot,
               ContainerCommand cmd |
               uint64_t max_ballot);

  defer Decide(uint64_t slot,
               uint64_t ballot,
               ContainerCommand cmd);
}

